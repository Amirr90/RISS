<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.riss.view.HomeFragment"
        android:label="RISS"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_topFundsFragment"
            app:destination="@id/topFundsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFundFragment"
            app:destination="@id/searchFundFragment"
            app:enterAnim="@anim/slide_out_bottom"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_bottom" />
    </fragment>
    <fragment
        android:id="@+id/topFundsFragment"
        android:name="com.example.riss.view.TopFundsFragment"
        android:label="Top Funds"
        tools:layout="@layout/fragment_top_funds" >
        <action
            android:id="@+id/action_topFundsFragment_to_fundsFragment"
            app:destination="@id/fundsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/fundsFragment"
        android:name="com.example.riss.view.FundsFragment"
        android:label="Funds"
        tools:layout="@layout/fragment_funds" >
        <action
            android:id="@+id/action_fundsFragment_to_createFundFragment"
            app:destination="@id/createFundFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/createFundFragment"
        android:name="com.example.riss.view.CreateFundFragment"
        android:label="Create Fund"
        tools:layout="@layout/fragment_create_fund" />
    <fragment
        android:id="@+id/searchFundFragment"
        android:name="com.example.riss.view.SearchFundFragment"
        android:label="Search Fragment"
        tools:layout="@layout/fragment_search_fund" />
</navigation>