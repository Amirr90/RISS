<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.AddDistributionFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="11dp">

        <RelativeLayout
            android:layout_margin="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/user_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Full Name"
                    android:textColor="#626262"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="25dp"
                    android:hint="Fund Name"
                    android:inputType="textPersonName"
                    android:textColor="#424242"
                    android:textColorHint="#80626262" />

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/smartphone_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Mobile No."
                    android:textColor="#626262"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="25dp"
                    android:hint="Fund Name"
                    android:inputType="textPersonName"
                    android:textColor="#424242"
                    android:textColorHint="#80626262" />

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/address_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Address"
                    android:textColor="#626262"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="25dp"
                    android:hint="Fund Name"
                    android:inputType="textPersonName"
                    android:textColor="#424242"
                    android:textColorHint="#80626262" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSupportFund"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rectangle_border"
                android:backgroundTint="#F5487F"
                android:fontFamily="@font/lato_bold"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="19dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>