<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateFundFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnConfirm"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <TextView
                android:id="@+id/tvFundName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="Sundaram Mutual Fund"
                android:textSize="21sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvFundID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="#424242"
                android:textSize="21dp"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:fontFamily="@font/lato_bold"
                android:text="Fund Name"
                android:textColor="#424242"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCreatedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="25dp"
                android:hint="Fund Name"
                android:maxLength="15"
                android:inputType="textPersonName"
                android:textColor="#424242"
                android:textColorHint="#80626262" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Mobile No."
                android:textColor="#424242"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="25dp"
                android:hint="Your Mobile No."
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="#424242"
                android:textColorHint="#80626262" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Email ID"
                android:textColor="#424242"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="25dp"
                android:hint="Your Email Id"
                android:inputType="textEmailAddress"
                android:textColor="#424242"
                android:textColorHint="#80626262" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Address"
                android:textColor="#424242"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="25dp"
                android:hint="Your Address"
                android:maxLength="60"
                android:inputType="textMultiLine"
                android:textColor="#424242"
                android:textColorHint="#80626262" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Select Plan"
                android:textColor="#424242"
                android:textSize="18dp"
                android:textStyle="bold" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="25dp"
                app:ms_alignLabels="false"
                app:ms_arrowSize="16dp"
                app:ms_baseColor="@color/colorAccent"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_floatingLabelText="floating label"
                app:ms_highlightColor="@color/colorPrimary"
                app:ms_hint="Fund Plan"
                app:ms_multiline="false"
                app:ms_thickness="0.35dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Occupation"
                android:textColor="#424242"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="25dp"
                android:hint="Occupation"
                android:inputType="textPersonName"
                android:textColor="#424242"
                android:maxLength="20"
                android:maxLines="1"
                android:textColorHint="#80626262" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Education"
                android:textColor="#424242"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="25dp"
                android:hint="Your Education"
                android:maxLength="20"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:textColor="#424242"
                android:textColorHint="#80626262" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Description"
                android:textColor="#424242"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="25dp"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:maxLength="700"
                android:maxLines="20"
                android:textColor="#424242"
                android:textColorHint="#80626262" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rectangle_border"
        android:backgroundTint="#F5487F"
        android:fontFamily="@font/lato_bold"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="19dp"
        android:textStyle="bold" />


</RelativeLayout>